<!DOCTYPE html>
<html>
    <head>
        <title>Assignment Four by Ben Hengeveld</title>
        <link rel="stylesheet" href="errorstyle.css">
        <link rel="stylesheet" href="style.css">
    </head>

    <body>
        <header>
            <h1><u>My Shop</u></h1>
        </header>

        <main>
            <div id="errors">
                <h3>Error</h3>
                <%
                if(typeof errors !== 'undefined'){
                    for(var error of errors){
                        %>
                            <p class="error"><%= error.msg %></p>
                        <%
                    }
                }
                %>
            </div>

            <%- include('templates/storeform') -%>
        </main>
    </body>
</html>